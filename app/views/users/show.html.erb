<img src="<%= @user.profile_picture %>" alt="<%= @user.full_name %>">

<h1>Profile Page: <%= @user.full_name %></h1>

<div id="friends-list">
  <h2>Friends</h2>
  <ul>
    <% @users.sample(5).each do |user| %>
      <% if user.id != @user.id %>
      <li>
      <%= image_tag "#{user.profile_picture}", alt: "#{user.full_name}" %>
      <%= link_to "#{user.full_name}", user_path(user) %><br>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>

<div id="games-list">
  <h2>Upcoming Games</h2>
  <h3>Games <%= "#{@user.full_name}" %> is Hosting:</h3>
  <ul>
    <% @user.upcoming_games_host.each do |game| %>
    <li><%= link_to "#{game.description}", game %></li>
    <% end %>
  </ul>
  <h3>Games <%= "#{@user.full_name}" %> is Playing:</h3>
  <ul>
    <% @user.upcoming_games_player.each do |game| %>
    <li><%= link_to "#{game.description}", game %></li>
    <% end %>
  </ul>
</div>

<%= link_to "Edit", edit_user_path if current_user.id == @user.id %>
<%= link_to "See all users", users_path %> |
<%= link_to "Back to dashboard", dashboard_path %>